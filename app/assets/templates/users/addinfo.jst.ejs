<h2 style="margin-top:0px"><a href=<%="#users/" + user.id %> ><%= user.escape("name") %></a></h2>

<table class="table table-striped table-hover ">
<tbody>
    <tr>
    <td>Email:</td>
    <td><%= user.get("email") %></td>
    </tr>
<% if (user.attributes.about){ %>    
    <tr>
    <td>About:</td>
    <td><%= user.get("about") %></td>
    </tr>
<% } %>
<% if (user.attributes.employment){ %>    
    <tr>
    <td>Employment:</td>
    <td><%= user.get("employment") %></td>
    </tr>
<% } %>
<% if (user.attributes.education){ %>    
    <tr>
    <td>Education:</td>
    <td><%= user.get("education") %></td>
    </tr>
<% } %>
<% if (user.attributes.location){ %>    
    <tr>
    <td>Location:</td>
    <td><%= user.get("location") %></td>
    </tr>
<% } %>
<% if (user.id == Quora.currentUser.id){ %>
  <% if (!user.attributes.about){ %>    
  	<tr>
  		
  	    		<td> About: </td> 
  	    		<td><form><input type="text" name="user[about]" id="about">&nbsp <input type="submit" class="btn btn-primary btn-xs"></form> </td>  	  		 
  		
  	</tr>
  <% } %>
  <% if (!user.attributes.employment){ %>    
  	<tr>
		<form>
	    		<td> Employment: </td> 
	    		<td><form><input type="text" name="user[employment]" id="employment">&nbsp <input type="submit" class="btn btn-primary btn-xs"></form> </td>  	  		 
  	</tr>
  <% } %>
  <% if (!user.attributes.location){ %>    
  	<tr>
		<form>
	    		<td> Location: </td> 
	    		<td><form><input type="text" name="user[location]" id="location">&nbsp <input type="submit" class="btn btn-primary btn-xs"> </form></td>  	  		 
  	</tr>
  <% } %>
  <% if (!user.attributes.education){ %>    
  	<tr>
		<form>
	    		<td> Education: </td> 
	    		<td><form><input type="text" name="user[education]" id="education">&nbsp <input type="submit" class="btn btn-primary btn-xs"> </form></td>  	  		 
  	</tr>
  <% } %>
<% } %>
</tbody>


